<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.qrbike.app.ui.Main">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击扫码"
        android:id="@+id/btn_Capture"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备份列表"
        android:id="@+id/btn_BackupList"
        android:layout_below="@+id/btn_Capture"
        android:layout_alignLeft="@+id/btn_Capture"
        android:layout_alignStart="@+id/btn_Capture"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑记录"
        android:id="@+id/btn_Backup"
        android:layout_below="@+id/btn_Capture"
        android:layout_alignLeft="@+id/btn_BackupList"
        android:layout_alignStart="@+id/btn_BackupList" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看信息"
        android:id="@+id/btn_Operate"
        android:layout_below="@+id/btn_BackupList"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
